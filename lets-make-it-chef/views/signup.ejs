<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <!-- link to bootstrap CDN for CSS -->
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"> -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css">
    <!-- custom CSS -->
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <header>
        <nav class="black darken-3">
            <div class="nav-wrapper container">
        
                <a href="/" class="brand-logo center" id="title-name">Let's Make It, Chef</a>
                <a href="#" data-target="mobile-demo" class="sidenav-trigger show-on-large"><i class="fas fa-bars"></i></a>
                <ul class="sidenav" id="mobile-demo">
                    <div>
                        <div id="nav-options">
                            <li><a href="/login" id="links">Login</a></li>
                            <li><a href="/recipes" id="links">Recipe Homepage</a></li>
                            <li><a href="/myrecipes" id="links">My Recipes</a></li>
                            <li><a href="/list" id="links">My Shopping List</a></li>
                        </div>
                        <div id="nav-options">
                            <li><a href="/auth/logout" id="links">Logout</a></li>
                        </div>
                    </div>
                    
                </ul>
            </div>
        </nav>
    </header>
    <div class="signing">
        <h1 class="loginTitle">SIGN UP</h1>
    <p class="loginPar">Please Sign Up Below</p>
    <div class="container">
        <div id="formfield">
            <form action="/login" method="POST">
                <input type="text" name="userName" placeholder="Username" required>
                <input type="email" name="email" placeholder="Email" required>
                <input type="password" name="password" placeholder="Password" required>
                <input type="password" name="confirmPassword" placeholder="Confirm Password" required>
                <input type="submit">
            </form>
        </div>   
    </div>
    
    <p class="loginPar">Have an account? Please login <a href="/login" class="loginHere">here</a>!</p>
    </div>
    <% if (locals.messages.errors) { %>
        <% messages.errors.forEach( el => { %>
            <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %>    
    <% } %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
        M.Sidenav.init(document.querySelector('.sidenav'))
    </script>
</body>
</html>