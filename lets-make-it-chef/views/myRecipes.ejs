<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <!-- link to bootstrap CDN for CSS -->
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"> -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css">
    <!-- custom CSS -->
    <link rel="stylesheet" href="css/style.css">
</head>
<body >
    <header>
        <nav class="black darken-3">
            <div class="nav-wrapper container">
        
                <a href="/" class="brand-logo center" id="title-name">Let's Make It, Chef</a>
                <a href="#" data-target="mobile-demo" class="sidenav-trigger show-on-large"><i class="fas fa-bars"></i></a>
                <ul class="sidenav" id="mobile-demo">
                    <div>
                        <div id="nav-options">
                            <li><a href="/login" id="links">Login</a></li>
                            <li><a href="/recipes" id="links">Recipe Homepage</a></li>
                            <li><a href="/my-recipes" id="links">My Recipes</a></li>
                            <li><a href="/list" id="links">My Shopping List</a></li>
                        </div>
                        <div id="nav-options">
                            <li><a href="/logout" id="links">Logout</a></li>
                        </div>
                    </div>
                    
                </ul>
            </div>
        </nav>
    </header>
    
    <div class="welcome-back pushIt">
        <h1 class="welcomeTitle black-title centering">Welcome Back! <%= info.userName %></h1>
        <!-- compare to social media page on how to have the users above pull in properly by looking at controller as well -->
        <p class="new-rec">To create a new recipe, click <a href="/add-recipe" class="click-here">here</a>!</p>
        <h2 class="red-title">My Recipes:</h2>
        <ul>
        <% recipes.forEach( el => { %>
                <li class='recipeItem' data-id='<%=el._id%>'>
                    <span class="mainTitle"><%= el.title %></span>
                    <span class="aTitle">Ingredients:</span>
                    <span ><%= el.ingredient %></span>
                    <!-- <span class="aTitle">Amount:</span>
                    <span><%= el.amount %></span> -->
                    <span class="aTitle">Instructions:</span>
                    <span><%= el.instructions %></span>
                    <form
                    action=""
                    method="POST"
                    class="col-3"
                  >
                    <button type="submit" class='del black-hov button-dist'>Delete</button>
                  </form>
                </li>
                <hr class="text-muted">
        <% }) %>    
        </ul>
    

    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
        M.Sidenav.init(document.querySelector('.sidenav'))
    </script>
</body>
</html>

