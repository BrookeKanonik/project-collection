<h6>Dashboard</h6>
<h3>Welcome {{name}}</h3>
<h6>Here are your stories</h6>
{{#if stories}}
    <table class="striped"> 
        {{!-- table head and row below --}}
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
            {{!-- it knows were in stories so for id it just needs _id not .id --}}
                <tr>
                    <td><a href="/stores/{{_id}}"></a>{{title}}</td>
                     <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td></td>
                </tr>
            {{/each}}
        </tbody>
    </table>

{{else}}
<p>You have not created any stories</p>
{{/if}}